{
  "commands": {
    "golang": {
      "install": "go install $tool@${version:-latest}"
    },
    "mac_dependencies": {
      "install": "brew install${cask:+ --cask} $tool"
    },
    "nodejs": {
      "install": "npm install -g $tool${version:+@$version}"
    },
    "ollama": {
      "install": "ollama pull $tool${version:+:$version}"
    },
    "ruby": {
      "install": "gem install $tool"
    }
  },
  "tools": {
    "golang": [
      "github.com/go-delve/delve/cmd/dlv",
      "github.com/golangci/golangci-lint/v2/cmd/golangci-lint",
      "github.com/nametake/golangci-lint-langserver",
      "golang.org/x/tools/cmd/goimports",
      "golang.org/x/tools/gopls"
    ],
    "mac_dependencies": [
      "anythingllm",
      "autoconf",
      "ca-certificates",
      "fastfetch",
      "fd",
      "ffmpeg",
      {
        "tool": "firefox@developer-edition",
        "cask": true
      },
      "fzf",
      {
        "tool": "ghostty",
        "cask": true
      },
      "gmp",
      "harper",
      "helix",
      "imagemagick",
      "jq",
      "lazygit",
      "libyaml",
      "m4",
      "markdown-oxide",
      "mise",
      "ncdu",
      "ollama",
      "openssl@3",
      "poppler",
      "readline",
      "resvg",
      "ripgrep",
      "scooter",
      "sevenzip",
      "shellcheck",
      "stow",
      "taplo",
      "usage",
      "yazi",
      "zoxide"
    ],
    "nodejs": [
      "@anthropic-ai/claude-code",
      "@tailwindcss/language-server",
      "bash-language-server",
      "eslint",
      "prettier",
      "prettier-plugin-svelte",
      "svelte-language-server",
      "typescript",
      "typescript-language-server",
      {
        "tool": "vscode-langservers-extracted",
        "version": "4.8"
      }
    ],
    "ollama": [
      {
        "tool": "mistral",
        "version": "latest"
      }
    ],
    "ruby": ["ruby-lsp", "rubocop"]
  }
}
