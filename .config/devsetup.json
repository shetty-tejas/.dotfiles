{
  "commands": {
    "golang": {
      "install": "go install $tool@${version:-latest}"
    },
    "mac_dependencies": {
      "install": "brew install${cask:+ --cask} $tool"
    },
    "nodejs": {
      "install": "npm install -g $tool${version:+@$version}"
    },
    "ruby": {
      "install": "gem install $tool"
    }
  },
  "tools": {
    "golang": [
      "golang.org/x/tools/gopls",
      "github.com/go-delve/delve/cmd/dlv",
      "golang.org/x/tools/cmd/goimports",
      "github.com/nametake/golangci-lint-langserver",
      "github.com/golangci/golangci-lint/v2/cmd/golangci-lint"
    ],
    "mac_dependencies": [
      "helix",
      "yazi",
      "lazygit",
      "mise",
      "fastfetch",
      "scooter",
      "fzf",
      "stow",
      "shellcheck",
      "ncdu",
      {
        "tool": "ghostty",
        "cask": true
      },
      "autoconf",
      "libyaml",
      "readline",
      "ca-certificates",
      "gmp",
      "m4",
      "openssl@3",
      "usage",
      "ffmpeg",
      "sevenzip",
      "jq",
      "poppler",
      "fd",
      "ripgrep",
      "zoxide",
      "resvg",
      "imagemagick"
    ],
    "nodejs": [
      "@anthropic-ai/claude-code",
      "bash-language-server",
      "prettier",
      {
        "tool": "vscode-langservers-extracted",
        "version": "4.8"
      }
    ],
    "ruby": [
      "ruby-lsp",
      "rubocop"
    ]
  }
}
